{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "esnext", // 使用ES最新语法
    "module": "esnext", // 使用ES模块语法
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
